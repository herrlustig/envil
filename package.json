{
  "name": "envil",
  "displayName": "ENVIL",
  "description": "A/V live-coding environment using Hydra and SuperCollider",
  "version": "1.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/inspektral/envil"
  },
  "publisher": "killbizz",
  "license": "GPL-3.0",
  "contributors": [
    {
      "name": "Tito Scutari",
      "email": "tito.scutari@gmail.com",
      "url": "https://github.com/inspektral"
    },
    {
      "name": "Gabriel Bizzo",
      "email": "gabriel.bizzo@hotmail.it",
      "url": "https://github.com/killbizz"
    },
    {
      "name": "Roger Vila",
      "url": "https://github.com/rogervila"
    }
  ],
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Programming Languages",
    "Themes",
    "Visualization",
    "Other"
  ],
  "keywords": [
    "live-coding",
    "live coding",
    "hydra",
    "supercollider",
    "audiovisual",
    "scd"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "extension.js",
  "icon": "resources/logo.png",
  "contributes": {
    "languages": [
      {
        "id": "supercollider",
        "aliases": [
          "SuperCollider",
          "supercollider",
          "scd",
          "sc"
        ],
        "extensions": [
          ".sc",
          ".scd",
          ".schelp"
        ],
        "configuration": "./supercollider/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "supercollider",
        "scopeName": "source.supercollider",
        "path": "./supercollider/syntaxes/supercollider.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "envil.start",
        "title": "Envil: Open Environment"
      },
      {
        "command": "envil.stop",
        "title": "Envil: Close Environment"
      },
      {
        "command": "envil.hydra.evaluate",
        "title": "Envil: Evaluate \u2013 Hydra"
      },
      {
        "command": "envil.supercollider.executeBlock",
        "title": "Envil: Execute Block \u2013 SuperCollider"
      },
      {
        "command": "envil.supercollider.startSCLang",
        "title": "Envil: Start SCLang"
      },
      {
        "command": "envil.supercollider.stopSCLang",
        "title": "Envil: Stop SCLang"
      },
      {
        "command": "envil.supercollider.toggleSCLang",
        "title": "Envil: Toggle SCLang"
      },
      {
        "command": "envil.supercollider.startSCSynth",
        "title": "Envil: Boot SCSynth"
      },
      {
        "command": "envil.supercollider.stopSCSynth",
        "title": "Envil: Stop SCSynth"
      },
      {
        "command": "envil.supercollider.toggleSCSynth",
        "title": "Envil: Toggle SCSynth"
      },
      {
        "command": "envil.supercollider.rebootServer",
        "title": "Envil: Reboot Server \u2013 SuperCollider"
      },
      {
        "command": "envil.supercollider.hush",
        "title": "Envil: Hush / Stop All Sounds"
      },
      {
        "command": "envil.supercollider.openHelpFor",
        "title": "Envil: Open Help for Word Under Cursor"
      },
      {
        "command": "envil.supercollider.search",
        "title": "Envil: Search \u2013 SuperCollider"
      }
    ],
    "configuration": [
      {
        "type": "object",
        "title": "Envil",
        "properties": {
          "envil.environment.active": {
            "type": "boolean",
            "default": false,
            "description": "Whether the ENVIL environment is currently active."
          }
        }
      },
      {
        "type": "object",
        "title": "SuperCollider",
        "properties": {
          "envil.supercollider.sclang.cmd": {
            "type": [
              "string",
              "null"
            ],
            "default": "/usr/bin/sclang",
            "description": "Path to the sclang executable."
          },
          "envil.supercollider.sclang.sclang_conf": {
            "type": [
              "string",
              "null"
            ],
            "default": "~/.config/SuperCollider/sclang_conf.yaml",
            "description": "Path to the sclang_conf.yaml file."
          }
        }
      }
    ],
    "keybindings": [
      {
        "command": "envil.supercollider.executeBlock",
        "key": "ctrl+enter",
        "mac": "cmd+enter",
        "when": "editorTextFocus && editorLangId == 'supercollider'"
      },
      {
        "command": "envil.supercollider.executeBlock",
        "key": "shift+enter",
        "when": "editorTextFocus && editorLangId == 'supercollider'"
      },
      {
        "command": "envil.hydra.evaluate",
        "key": "ctrl+enter",
        "mac": "cmd+enter",
        "when": "editorTextFocus && editorLangId == 'javascript' && config.envil.environment.active"
      },
      {
        "command": "envil.supercollider.hush",
        "key": "ctrl+.",
        "mac": "cmd+.",
        "when": "editorTextFocus"
      },
      {
        "command": "envil.supercollider.openHelpFor",
        "key": "ctrl+d",
        "mac": "cmd+d",
        "when": "editorTextFocus && editorLangId == 'supercollider'"
      },
      {
        "command": "envil.supercollider.search",
        "key": "ctrl+h",
        "mac": "cmd+h",
        "when": "editorTextFocus && editorLangId == 'supercollider'"
      }
    ]
  },
  "extensionDependencies": [
    "subframe7536.custom-ui-style"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "cd client && npm install && tsc -p . && cd ../server && npm install && tsc -p .",
    "watch": "tsc -b client server -w",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.86.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "express": "^4.18.2",
    "jsonc-parser": "^3.2.1",
    "osc": "^2.4.4",
    "socket.io": "^4.7.4"
  }
}